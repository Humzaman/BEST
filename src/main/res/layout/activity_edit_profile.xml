<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.best.createProfile.CreateProfileActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/idNumberEditText_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/idNumberEditText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="ID#"
                    android:maxLength="9"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lastNameEditText_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idNumberEditText_layout2">

                <EditText
                    android:id="@+id/lastNameEditText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="textPersonName|textCapWords"
                    android:singleLine="true"
                    android:hint="Last Name"
                    android:maxLength="35"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/firstNameEditText_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastNameEditText_layout2">

                <EditText
                    android:id="@+id/firstNameEditText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:inputType="textPersonName|textCapWords"
                    android:hint="First Name"
                    android:maxLength="35"
                    android:imeOptions="actionDone"/>
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/genderSpinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstNameEditText_layout2"
                android:layout_centerHorizontal="true"/>

            <Spinner
                android:id="@+id/handednessSpinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/genderSpinner2"
                android:layout_centerHorizontal="true"/>

            <Spinner
                android:id="@+id/educationSpinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/handednessSpinner2"
                android:layout_centerHorizontal="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dobEditText_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/educationSpinner2">

                <EditText
                    android:id="@+id/dobEditText2"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="Date of Birth"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/notesEditText_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dobEditText_layout2">

                <EditText
                    android:id="@+id/notesEditText2"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:hint="Notes"/>
            </android.support.design.widget.TextInputLayout>




        </RelativeLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>
